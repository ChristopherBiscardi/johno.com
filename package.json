{
  "private": true,
  "name": "johno.com",
  "type": "module",
  "scripts": {
    "build": "toast incremental .",
    "changeset": "changeset",
    "deploy": "now switch johno && now --prod",
    "nuke": "yarn clean && rm -rf node_modules && rm yarn.lock",
    "pkg:fix": "manypkg fix",
    "pkg:check": "manypkg check",
    "release": "changeset publish",
    "test": "jest",
    "todo": "yarn workspace todo start",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@changesets/cli": "2.9.2",
    "@manypkg/cli": "0.14.0",
    "@sector/breadbox": "^0.0.4",
    "chroma-js": "2.1.0",
    "husky": "4.2.5",
    "jest": "^26.2.2",
    "lint-staged": "10.2.11",
    "lodash.sample": "4.2.1",
    "prettier": "2.0.5",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-feather": "2.0.8",
    "theme-ui": "^0.3.1",
    "three": "0.119.1",
    "toast": "^0.3.19"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,mdx,json}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/.cache/",
      "dist"
    ],
    "testEnvironment": "node"
  }
}
