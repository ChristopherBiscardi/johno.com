{
  "private": true,
  "name": "johno.com",
  "scripts": {
    "start": "gatsby develop",
    "build": "gatsby build",
    "changeset": "changeset",
    "clean": "gatsby clean",
    "deploy": "now switch johno && now --prod",
    "pkg:fix": "manypkg fix",
    "pkg:check": "manypkg check",
    "release": "changeset publish",
    "test": "jest",
    "todo": "yarn workspace todo start",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@changesets/cli": "2.6.5",
    "@manypkg/cli": "0.11.1",
    "@theme-ui/components": "0.3.1",
    "chroma-js": "2.1.0",
    "gatsby": "^2.20.23",
    "gatsby-plugin-fathom": "1.2.0",
    "gatsby-theme-austere": "0.1.1",
    "gatsby-theme-blog-tags": "0.0.11",
    "husky": "4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "10.1.3",
    "lodash.sample": "4.2.1",
    "prettier": "2.0.4",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-feather": "2.0.4",
    "theme-ui": "0.3.1",
    "three": "0.115.0"
  },
  "engines": {
    "node": "12.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,mdx,json}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/.cache/",
      "dist"
    ],
    "testEnvironment": "node"
  },
  "resolutions": {
    "@babel/helpers": "7.9.2",
    "@emotion/core": "10.0.28",
    "@mdx-js/react": "1.5.8",
    "@theme-ui/components": "0.3.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "theme-ui": "0.3.1"
  }
}
